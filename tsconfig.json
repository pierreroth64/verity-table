{
  "compilerOptions": {
    "outDir": "./build",
    "noEmit": true,
    "target": "es2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2017"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./lib/**/*"],
  "exclude": ["node_modules"]
}
